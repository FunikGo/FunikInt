<style>
    ::-webkit-scrollbar{
		display: none;
	}
    html {
        scroll-behavior: smooth;
    }
   #HeadText, #SubText {
    transition: top 0.1s linear;
    
}
#pageTwo {
    will-change: border-radius;
}
#SpanUpHomeText,
#HeadText,
#SubText {
    will-change: top;
}
#footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;

  transform: translateY(100%);
  transition: transform 0.4s ease;
}

</style>
<script is:inline>
document.addEventListener("DOMContentLoaded", () => {
  const $ = (id) => document.getElementById(id);

  const SpanUpHomeText = $("SpanUpHomeText");
  const HeadText = $("HeadText");
  const SubText = $("SubText");
  const overlayHutan1 = $("overlayHutan1");
  const overlayHutan2 = $("overlayHutan2");
  const FunikInOverlay = $("FunikInOverlay");
  const footer = $("footer");
  const pageTwo = $("pageTwo");

  if (
    !SpanUpHomeText ||
    !HeadText ||
    !SubText ||
    !overlayHutan1 ||
    !overlayHutan2 ||
    !FunikInOverlay ||
    !footer ||
    !pageTwo
  )
    return;

  let latestScrollY = 0;
  let ticking = false;

  const maxRadius = 18;
  let currentRadius = maxRadius;
  let targetRadius = maxRadius;

  window.addEventListener("scroll", () => {
    latestScrollY = window.scrollY;

    if (!ticking) {
      requestAnimationFrame(updateAnimation);
      ticking = true;
    }
  });

  function updateAnimation() {
    const windowHeight = window.innerHeight;
    const documentHeight = document.documentElement.scrollHeight;

    const isBottom =
    windowHeight + latestScrollY >= documentHeight - 2;

//    Animasi Untuk Footer Disini

    if (isBottom) {
    footer.style.transform = "translateY(0)";
    } else {
    footer.style.transform = "translateY(100%)";
    }

    const headMove = latestScrollY * 0.03;
    const subMove = latestScrollY * 0.02;

    FunikInOverlay.style.top = latestScrollY * 0.005 + "rem";

    overlayHutan1.style.bottom = latestScrollY * 0.02 + "rem";
    overlayHutan2.style.bottom = latestScrollY * 0.017 + "rem";

    SpanUpHomeText.style.top = -18 + headMove * 4 + "%";

    HeadText.style.top = 40 + headMove + "%";
    HeadText.style.opacity = 1 - headMove / 50;
    HeadText.style.transform = `scale(${1 - headMove / 100})`;

    SubText.style.top = 54 + subMove + "%";
    SubText.style.opacity = 1 - headMove / 50;
    SubText.style.transform = `scale(${1 - subMove / 80})`;

// SetUp Border Radius id = PageTwo => Hidden Jika Tidak Digunakan

    targetRadius = Math.max(maxRadius - latestScrollY * 1.4, 0);
    currentRadius += (targetRadius - currentRadius) * 1.4;

    pageTwo.style.borderRadius = `
      ${currentRadius}px ${currentRadius}px 0px 0px
    `;

    ticking = false;
  }
});

</script>