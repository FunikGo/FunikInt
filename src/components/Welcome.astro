<style>
    ::-webkit-scrollbar{
		display: none;
	}
    html {
        scroll-behavior: smooth;
    }
   #HeadText, #SubText {
    transition: top 0.1s linear;
    
}
#pageTwo {
    will-change: border-radius;
}
#SpanUpHomeText,
#HeadText,
#SubText {
    will-change: top;
}

</style>
<script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
const SpanUpHomeText = document.getElementById('SpanUpHomeText');
const HeadText = document.getElementById('HeadText');
const SubText = document.getElementById('SubText');

if (!SpanUpHomeText || !HeadText || !SubText || !pageTwo) return;

let latestScrollY = 0;
let ticking = false;

window.addEventListener('scroll', () => {
    latestScrollY = window.scrollY;

    if (!ticking) {
        requestAnimationFrame(updateAnimation);
        ticking = true;
    }
});

function updateAnimation() {
    const headMove = latestScrollY * 0.03;
    const subMove = latestScrollY * 0.02;

    SpanUpHomeText.style.top = -10 + headMove + '%';
    HeadText.style.top = 30 + headMove + '%';
    HeadText.style.scale = 1 - (headMove / 100); // Scale up as text moves down
    SubText.style.top = 54 + subMove + '%';
    SubText.style.scale = 1 - (subMove / 80); // Scale down as text moves down


    ticking = false;
}


const maxRadius = 45;
let currentRadius = maxRadius;
let targetRadius = maxRadius;

window.addEventListener('scroll', () => {
    const scrollY = window.scrollY;

    targetRadius = Math.max(maxRadius - scrollY * 0.1, 0);
});

function animate() {
    // easing smooth
    currentRadius += (targetRadius - currentRadius) * 0.1;

    pageTwo.style.borderRadius =
        `${currentRadius}% ${currentRadius}% 0% 0%`;

    requestAnimationFrame(animate);
}

animate();

});
</script>