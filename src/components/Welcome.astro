<style>
    ::-webkit-scrollbar{
		display: none;
	}
    html {
        scroll-behavior: smooth;
    }
   #HeadText, #SubText {
    transition: top 0.1s linear;
    
}
#pageTwo {
    will-change: border-radius;
}
#SpanUpHomeText,
#HeadText,
#SubText {
    will-change: top;
}
#footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;

  transform: translateY(100%);
  transition: transform 0.4s ease;
}

</style>
<script is:inline>
document.addEventListener("DOMContentLoaded", () => {
  const $ = (id) => document.getElementById(id);

  const SpanUpHomeText = $("SpanUpHomeText");
  const HeadText = $("HeadText");
  const SubText = $("SubText");
  const overlayHutan1 = $("overlayHutan1");
  const overlayHutan2 = $("overlayHutan2");
  const FunikInOverlay = $("FunikInOverlay");
  const footer = $("footer");
  const pageTwo = $("pageTwo");

  if (
    !SpanUpHomeText ||
    !HeadText ||
    !SubText ||
    !overlayHutan1 ||
    !overlayHutan2 ||
    !FunikInOverlay ||
    !footer ||
    !pageTwo
  )
    return;

  let latestScrollY = 0;
  let ticking = false;

  const maxRadius = 25;
  let currentRadius = maxRadius;
  let targetRadius = maxRadius;

  window.addEventListener("scroll", () => {
    latestScrollY = window.scrollY;

    if (!ticking) {
      requestAnimationFrame(updateAnimation);
      ticking = true;
    }
  });

  function updateAnimation() {
const windowHeight = window.innerHeight;
const documentHeight = document.documentElement.scrollHeight;

const isBottom =
  windowHeight + latestScrollY >= documentHeight - 2;

/* ======================
   FOOTER ANIMATION
====================== */

if (isBottom) {
  footer.style.transform = "translateY(0)";
} else {
  footer.style.transform = "translateY(100%)";
}

    /* ======================
       PARALLAX TEXT
    ====================== */

    const headMove = latestScrollY * 0.03;
    const subMove = latestScrollY * 0.02;

    FunikInOverlay.style.top = latestScrollY * 0.005 + "rem";

    overlayHutan1.style.bottom = latestScrollY * 0.04 + "rem";
    overlayHutan2.style.bottom = latestScrollY * 0.037 + "rem";

    SpanUpHomeText.style.top = -14 + headMove * 1.3 + "%";

    HeadText.style.top = 30 + headMove + "%";
    HeadText.style.opacity = 1 - headMove / 50;
    HeadText.style.transform = `scale(${1 - headMove / 100})`;

    SubText.style.top = 54 + subMove + "%";
    SubText.style.opacity = 1 - headMove / 50;
    SubText.style.transform = `scale(${1 - subMove / 80})`;

    /* ======================
       BORDER RADIUS SMOOTH
    ====================== */

    targetRadius = Math.max(maxRadius - latestScrollY * 0.1, 0);
    currentRadius += (targetRadius - currentRadius) * 0.1;

    pageTwo.style.borderRadius = `
      ${currentRadius}% ${currentRadius}% 0% 0%
    `;

    ticking = false;
  }
});

</script>