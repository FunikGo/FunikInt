<style>
    html {
        scroll-behavior: smooth;
    }
   #HeadText, #SubText {
    transition: top 0.1s linear;
}

</style>
<script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
    window.addEventListener('scroll', () => {
    const HeadText = document.getElementById('HeadText');
    const SubText = document.getElementById('SubText');

    if (!HeadText || !SubText) return;

    const scrollY = window.scrollY;

    // atur sensitivitas gerakan
    const headMove = scrollY * 0.03;
    const subMove = scrollY * 0.02;

    // posisi dasar (biar ga mulai dari 0)
    HeadText.style.top = 30 + headMove + '%';
    SubText.style.top = 45 + subMove + '%';
});

});
</script>